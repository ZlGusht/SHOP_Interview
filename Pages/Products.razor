@page "/"


<div class="container">
    <h5 class="mb-0">Choose from our unique</h5>
    <h1 class="mb-5" style="font-style: italic;">Products</h1>
    <hr>
    <div class="row">
        @foreach (Product product in products.Products)
        {
        <div class="col-4 d-flex flex-column align-items-center product-container">
            <img class="img-fluid" src="@product.PhotoURL" />
            <h3 class="mt-3 text-center" style="color: antiquewhite">@product.ProductName</h3>
            <p>@product.ProductPrice $</p>
            <div class="hide">
                @if (product.UnitsInStock > 0)
                {
                    <div>Products Remaining: @product.UnitsInStock</div>
                    <div>Delivery on @product.DeliveryOn.Day/@product.DeliveryOn.Month/@product.DeliveryOn.Year</div>

                    <button type="button" class="btn btn-secondary mt-auto">Add to cart</button>
                }
                else
                {

                    <button type="button" class="btn btn-danger">Out of stock</button>
                }
            </div>
        </div>
        }
    </div>
</div>
<link href="../wwwroot/css/products.scss" rel="stylesheet" />

@code {
    private ProductsViewModel products = new ProductsViewModel();
}
